<%= link_to "<< Back", posts_path %>

<p><%= link_to "New post", new_post_path, :class => "btn btn-success" %></p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %><br/><br/>
  <strong>Published Date: <%= @post.created_at %></strong>
</p>

<p>
  <%= link_to 'Edit post', edit_post_path(@post), :class => "btn btn-default" %>
  <%= link_to 'Destroy post', @post,:class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></p>