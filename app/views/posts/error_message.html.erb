<% if @post.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h2>Please fix the following <%= pluralize(@post.errors.count, "error") %></h2>

        <ul>
          <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>